#ifndef AGENDA_H_
#define AGENDA_H_

#include<map>
#include<string>
#include<iostream>

#include "Fecha.h"
#include "Hora.h"

class Agenda {

	std::map<Fecha,std::map<Hora,std::string>> mapaAgenda;

public:
	Agenda();

	void addEvento(Fecha fecha, Hora hora, std::string evento);

	virtual ~Agenda();
};

#endif /* AGENDA_H_ */
