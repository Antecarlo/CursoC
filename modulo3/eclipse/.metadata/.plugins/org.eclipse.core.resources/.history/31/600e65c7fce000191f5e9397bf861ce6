#include "Vector.h"
#include <iostream>

namespace std {
namespace literals {

Vector::Vector(int tama=10) {
	this->size=tama;
	this->numeros=new int(tama);
	this->cont=0; //Posicion libre que tenemos
}

void Vector::imprimir() {
	for(int i=0;i<this->cont;i++){
		std::cout << i <<": "<<this->numeros[i] << std::endl;
		std::cout << std::endl;
	}
}

bool Vector::add(int num) {
	if(this->cont==this->size){
		std::cout << "El numero no se puede aÃ±adir" << std::endl;
		return 0;
	}else{
		this->numeros[this->cont]=num;
		return 1;
	}
}

Vector::~Vector() {
	// TODO Auto-generated destructor stub
}

} /* namespace literals */
} /* namespace std */
