void Buscaminas::jugar() {
	bool continuar=true;
	Coordenada coor;

	do{
		system("clear");
		this->tablero.vistaJuego();
		std::cout << std::endl;
		this->tablero.vistaTraza();

		std::cout << "Introduce coordenada: ";
		coor = jugador.getCoordenada();

		continuar = tablero.abrirCasilla(coor);
	}while(continuar);
}

