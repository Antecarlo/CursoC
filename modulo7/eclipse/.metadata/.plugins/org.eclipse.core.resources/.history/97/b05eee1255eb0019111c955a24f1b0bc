#include <iostream>
#include <memory>
#include "Matriz.h"

void test_unique_ptr(){
	//Definir un array dinamico:
	std::unique_ptr<int []> v;

	v = std::make_unique<int []>(10);

	for(int i=0;i<10;i++)
		v[i]=i+1;

	for(int i=0;i<10;i++)
		std::cout << v[i] <<" ";
	std::cout << std::endl;
	// Se libera automaticamente.
}

void test_matriz(){

	Matriz matriz(5,5,1);
	matriz.imprimir();

/*
	matriz=matriz+matriz;
	matriz.imprimir();

	matriz=matriz*matriz;
	matriz.imprimir();
*/

	Matriz matriz2(2,5,2);
	Matriz matriz3 = matriz2*matriz;
	matriz3.imprimir();

}

int main(){
	//test_unique_ptr();
	test_matriz();

}


