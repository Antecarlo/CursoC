Fichero::Fichero(std::string path): path(path) {
}

void Fichero::leer() {
	std::ifstream fich(this->path.c_str(),std::ios::in); //abrimos el fichero

	std::string linea;
	char cad[1024];

	if(!fich){
		std::cout << "Error, no se encuentra el fichero" << std::endl;
		std::exit(1);
	}

}

