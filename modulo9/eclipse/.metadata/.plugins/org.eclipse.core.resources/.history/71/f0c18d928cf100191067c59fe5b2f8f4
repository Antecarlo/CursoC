std::string FormateadorCsvHtml5::rowToHtml(std::string csv) {
	std::istringstream is(csv);
	std::string filaHTML,columnaCSV;

	filaHTML = "<tr>";
	while (std::getline(is,columnaCSV,';')){
		filaHTML += this->colToHtml(columnaCSV);
	}
	filaHTML +="<tr>";
	return filaHTML;
}

