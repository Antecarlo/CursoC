void EstrategiaDirecta::ordenar(int* array, int n) {

}

EstrategiaDirecta::~EstrategiaDirecta() {
	// TODO Auto-generated destructor stub
}


void Sort(int * array, int size)
{
	// inserci√≥n directa
	int i, j, min;
	int str;

	for (i = 0; i < size-1; i++)
	{
		min = i;
		for (j=i+1 ; j < size ; j++){
			if (array[j] < array[min])
				min = j;
		}

		str = array[i];
		array[i] = array[min];
		array[min] = str;
	}
}
