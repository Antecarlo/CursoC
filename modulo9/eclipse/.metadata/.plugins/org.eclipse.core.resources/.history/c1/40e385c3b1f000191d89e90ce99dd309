#include "Escena.h"

Escena::Escena() {
	// TODO Auto-generated constructor stub

}

void Escena::dibujar() {
	for(unsigned i=0;i<figuras.size();i++)
		figuras[i]->dibujar();
}

void Escena::addFigura(std::unique_ptr<Figura> figura) {
	this->figuras.push_back(std::move(figura));
}

Escena::~Escena() {
	// TODO Auto-generated destructor stub
}

