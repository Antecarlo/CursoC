void Contexto::imprimir(int *copia, int n) {

	//Imprimir los diez primeros numeros
	for(int i=0;i<10 && i< n; i++)
		std::cout << copia[i]<< std::endl;

	std::cout << std::endl << "..."<< std::endl;

	//Imprimir los diez ultimos numeros
	for(int i=n-10;i<n;i++)
		std::cout << copia[i]<< std::endl;
}

